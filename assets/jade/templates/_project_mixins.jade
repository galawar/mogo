//------------------------------------------------------------ clients
mixin clients(array)
	.clients
		each item in array
			.client_block
				.client_image
					img.img(src= item.img)
				.text_wrap
					.image_c_title= item.name
					.image_c_text= item.spec
					.text
						p= item.text

//------------------------------------------------------------ from blog
mixin from_blog(array)
	.recent
		each item in array
			a.recent_post(href= item.url)
				figure.image_wrap.blog_mod
					img.img.blog_mod(src= item.img)
				figcaption.image_caption
					h2.image_c_title= item.title
					.image_c_text
						p= item.text
					.post_date
						span.post_d_day= item.day
						span.post_d_month= item.month
					.post_stat_wrap
						span.post_stat.views_mod= item.views
						span.post_stat.comm_mod= item.comm
